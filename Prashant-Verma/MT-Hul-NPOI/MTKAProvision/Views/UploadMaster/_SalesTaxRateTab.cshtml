@using MT.Model;
@{
    UserRoleRights userRights = ViewBag.LoggedInUserRights as UserRoleRights;
    bool isUploadRight = userRights.UserRole.RoleName == "Admin" ? true : userRights.UserRights.Where(u => u.PageId == "SALESTAXRATE").FirstOrDefault().Write;
}

<input type="hidden" name="activeTabMaster" id="activeTabMaster" value="SalesTaxMaster" data-uploadurl="/SalesTaxRateMaster/UploadSalesTaxFile" />
<input type="hidden" id="auditTrailEntity" value="SalesTaxMaster" />
<input type="hidden" id="auditTrailReportName" value="Sales Tax Master" />
<div class="uploadMaster-tab-content active">
    <div class="row">
        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-12">
                    <!--  Upload section -->
                    <section class="upload">
                        <div class="row">
                            <div class="col-sm-12">
                                <div id='dropAreaDiv' class="col-sm-3 dotted" data-isuploadright="@isUploadRight">
                                    <figure id="upload">
                                        <a href="javascript:void(0)">
                                            <img src="/img/icons/Upload_Secondary_Sales.png" alt="">
                                        </a>
