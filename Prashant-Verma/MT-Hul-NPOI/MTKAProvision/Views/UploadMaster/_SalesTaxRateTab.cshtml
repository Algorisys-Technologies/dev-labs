                                            <div><strong>Click</strong> here to select file or</div><div><strong>Drag and Drop</strong> file here to upload.</div>
                                        </figcaption>
                                    </figure>
                                    <div id="div_fileName">

                                    </div>
                                </div>
                                <input id="fileInput" type="file" name="fileInput" style="display: none;" />
                                <div class="col-sm-1">
                                    <h1 class="hidden-xs">
                                        <img src="/img/Icons/Left_Arrow1.png" alt="" class="mtop30">
                                        <!-- <i class="glyphicon glyphicon-arrow-left text-info mtop40"></i> -->
                                    </h1>
                                </div>
                                <div class="col-sm-8">
                                    <div class="col-xs-12  info-details">
                                        <!--       <div class="col-xs-1 col-sm-1">
                                            <img src="/img/icons/info.png" alt="" style="width: 25px;">
                                        </div> -->






                                        <div class="quote-container">
                                            <i class="pin"></i>
                                            <blockquote class="note yellow">
                                                <p>
                                                    <strong>Sales Tax Rate</strong> <span class="text-info">can be a  <strong>full upload</strong> or <strong>incremental upload.</strong>. Upload file format can be downloaded from the menu above.
                                                </p>
                                                @*<p class="text-info">When full upload is done <u>system will automatically delete the existing data for current MOC</u> and upload <strong> fresh data.</strong></p>*@
                                                <p class="text-danger">The formart of the file should be always .xls or .xlsx </p>
                                            </blockquote>
                                        </div>





                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div id="div_UploadBtn" class="row" style="display:none;">
                            <a id="btnDroppedSave" href="javascript:void(0)" class="btn btn-primary btn-lg">Upload File</a>
                        </div>
                    </section>
                </div>
            </div>
            <div class="row mbottom10">
                <div class="col-sm-12">
                    <!-- Data Table -->
                    <section id="tableinfo">
                        <div class="">
                            <table id="uploadSalesTaxRateMaster" class="table table-striped table-bordered table-condensed" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        @if (isUploadRight)
                                    {
                                        <th style="width:5%" class="spncheck">
                                            <input type="checkbox" name="select_all" value="1" id="row-select-all">

                                            <span id="btndeleteSalesTaxRate" class="btn btn-danger btn-xs deletemaster">Delete</span>

                                        </th> }
                                        <th class="middleAlign">Tax Code</th>
                                        <th class="middleAlign">State Code</th>
                                        <th class="middleAlign">Sales Tax Rate</th>

                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="clearfix"></div>
                    </section>
                </div>
            </div>
            <div class="mbottom10"></div>
        </div>
        <!--  Right Column -->
    </div>
</div>
<script>
    var uploadMasters1_dtObj;
    $(document).ready(function () {

        FillSalesTaxRateDataTable();

    })


    function FillSalesTaxRateDataTable() {
        if (uploadMasters1_dtObj != undefined) {
            uploadMasters1_dtObj.destroy();
        } if ($("#dropAreaDiv").data('isuploadright') == "True") {

            uploadMasters1_dtObj = $('#uploadSalesTaxRateMaster').DataTable({
                "processing": true,
                "serverSide": true,
                //"pageLength": 50,
                "info": true,
                //"stateSave": true,
                "lengthMenu": [[10, 20, 50, -1], [10, 20, 50, "All"]],
                "ajax": {
                    "url": "@string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~"))/SalesTaxRateMaster/AjaxGetSalesTaxData",
                    "type": "POST",
                    "error": function (xhr, textStatus, errorThrown) {
                        callOnError(xhr, textStatus, errorThrown);
                    }
                },
                "columns": [{},
                        { "data": "TaxCode", "orderable": true },
                        { "data": "StateCode", "orderable": true },
                        { "data": "SalesTaxRate", "orderable": true, "class": "rightaligncell" }
                ],
                'columnDefs': [{
                    'targets': 0,
                    'searchable': false,
                    'orderable': false,
                    'className': 'dt-body-center',
                    'sWidth': '5%',
                    'render': function (data, type, full, meta) {
                        return '<input type="checkbox" name="id" value="' + full.Id + $('<div/>').text(data).html() + '">';
                    }
                }],
                "order": [[1, "asc"]],
                "scrollX": true,
                "scrollY": 400,
                "scroller": {
                    loadingIndicator: true
                }
            });
        }
        else {
            uploadMasters1_dtObj = $('#uploadSalesTaxRateMaster').DataTable({
                "processing": true,
                "serverSide": true,
                //"pageLength": 50,
                "info": true,
                //"stateSave": true,
                "lengthMenu": [[10, 20, 50, -1], [10, 20, 50, "All"]],
                "ajax": {
                    "url": "@string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~"))/SalesTaxRateMaster/AjaxGetSalesTaxData",
                    "type": "POST",
                    "error": function (xhr, textStatus, errorThrown) {
                        callOnError(xhr, textStatus, errorThrown);
                    }
                },
                "columns": [
                        { "data": "TaxCode", "orderable": true },
                        { "data": "StateCode", "orderable": true },
                        { "data": "SalesTaxRate", "orderable": true, "class": "rightaligncell" }
                ],

                "order": [[0, "asc"]],
                "scrollX": true,
                "scrollY": 400,
                "scroller": {
                    loadingIndicator: true
                }
            });
        }
        setTimeout(function () {
            $("#SalesTaxDownload").remove();
            $('<div id="tblheader" class="mbottom5"><a href="#" id="SalesTaxDownload"><img class="downloadimg" src="/img/dashboard/Download_Excel.png" alt=""><span class="btn" style="Color:blue;Padding:5px">Download</span></a><span id="btnviewAuditTrail" class="btn audittrail" title="Audit Trail"><img src="/img/auditTrial2.png" width="20px"/></span></div>').insertBefore($("#uploadSalesTaxRateMaster_length"))

        }, 10);

    }


    //$('#row-select-all').on('click', function () {
    $(document).off('click', '#row-select-all').on('click', '#row-select-all', function () {
        // Get all rows with search applied
        var rows = uploadMasters1_dtObj.rows({ 'search': 'applied' }).nodes();
        // Check/uncheck checkboxes for all rows in the table
        $('input[type="checkbox"]', rows).prop('checked', this.checked);
    });

    $(document).off("click", "#btndeleteSalesTaxRate").on("click", "#btndeleteSalesTaxRate", function () {
        if ($('input[type="checkbox"][name="id"]:checked').length > 0) {
            bootbox.confirm(" Are you sure, delete selected row(s)?", function (result) {
                if (result == true) {

                    var form = this;
                    // Iterate over all checkboxes in the table
                    uploadMasters1_dtObj.$('input[type="checkbox"]').each(function () {
                        // If checkbox doesn't exist in DOM
                        if (!$.contains(document, this)) {
                            // If checkbox is checked
                            if (this.checked) {
                                // Create a hidden element
                                $(form).append(
                                   $('<input>')
                                      .attr('type', 'hidden')
                                      .attr('name', this.name)
                                      .val(this.value)
                                );
                            }
                        }

                    });
                    var data = uploadMasters1_dtObj.$('input[type="checkbox"]').serialize();

                    $.ajax({
                        url: "/SalesTaxRateMaster/DeleteSalesTaxRateMaster",
                        type: "Post",
                        data: data,
                        success: function (result) {
                            FillSalesTaxRateDataTable();
                            if (result.data.IsSuccess == false) {
                                bootbox.alert({
                                    message: result.data.MessageText,
                                    title: "Error!"
                                });
                            }
                            else {
                                bootbox.alert({
                                    message: result.data.MessageText,
                                    title: "Message!"
                                });
                            }
                        }
                    })
                }
            })
        }
        else {
            bootbox.alert("Please select records to delete");
            return false;
        }
    });
    $(document).on("click", "#SalesTaxDownload", function () {
        window.location = "/SalesTaxRateMaster/Download_SalesTaxRateMasterExcel";
    });

</script>


<script src="~/Scripts/custom/drag-and-dropping.js"></script>
